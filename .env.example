# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api
API_VERSION=1

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/flightsbooking?schema=public"

# JWT
JWT_SECRET=your-jwt-secret
JWT_EXPIRATION=1d

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Supabase
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-key

# Webhook configurations
WEBHOOK_PATHS=/payment/webhook,/another/webhook/path

# Cache and system settings
CACHE_TTL=300 # Time to live for cache in seconds
MAX_CACHE_ITEMS=100 # Maximum number of items in cache

# Seat and booking settings
SEAT_LOCK_EXPIRY_MINUTES=15 # Duration in minutes before a seat lock expires
PENDING_BOOKING_EXPIRY_MINUTES=30 # Duration in minutes before a pending booking expires

# Cabin price multipliers
ECONOMY_PRICE_MULTIPLIER=1.0
PREMIUM_ECONOMY_PRICE_MULTIPLIER=1.5
BUSINESS_PRICE_MULTIPLIER=2.5
FIRST_PRICE_MULTIPLIER=4.0
